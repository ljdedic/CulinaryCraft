<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <Button
        android:id="@+id/dodajsliku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dodaj sliku"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorLightPurple"
        android:gravity="center"
        android:padding="20dp"
        android:text="CulinaryCraft"
        android:textColor="@color/colorBlackText"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/dodajjelo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dodajsliku" />

    <EditText
        android:id="@+id/imejela"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Ime jela"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColor="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dodajjelo" />

    <EditText
        android:id="@+id/potrebnisastojci"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Potrebni sastojci"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColor="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="@+id/imejela"
        app:layout_constraintStart_toStartOf="@+id/imejela"
        app:layout_constraintTop_toBottomOf="@+id/imejela" />

    <EditText
        android:id="@+id/potrebnovrijeme"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/baseline_access_time_24"
        android:hint="Potrebno vrijeme za pripremu jela"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColor="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="@+id/potrebnisastojci"
        app:layout_constraintStart_toStartOf="@+id/potrebnisastojci"
        app:layout_constraintTop_toBottomOf="@+id/potrebnisastojci" />

    <EditText
        android:id="@+id/brojporcija"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/portion"
        android:hint="Broj porcija"
        android:inputType="number"
        android:paddingTop="10dp"
        android:textColor="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="@+id/potrebnovrijeme"
        app:layout_constraintStart_toStartOf="@+id/potrebnovrijeme"
        app:layout_constraintTop_toBottomOf="@+id/potrebnovrijeme" />

    <EditText
        android:id="@+id/upute"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:hint="Kratka uputa za pripremu"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColor="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="@+id/brojporcija"
        app:layout_constraintStart_toStartOf="@+id/brojporcija"
        app:layout_constraintTop_toBottomOf="@+id/brojporcija" />

    <Button
        android:id="@+id/spremi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spremi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upute" />

</androidx.constraintlayout.widget.ConstraintLayout>
