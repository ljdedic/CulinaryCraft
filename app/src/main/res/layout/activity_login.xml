<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slika1"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:fontFamily="@font/damion"
        android:freezesText="false"
        android:text="CulinaryCraft"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlackText"
        android:textSize="40sp"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/unesiemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Unesite email..."
        android:inputType="text"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/colorBlackText"
        android:textColorHint="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/unesiprezime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_security"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Unesite lozinku..."
        android:inputType="textPassword"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/colorBlackText"
        android:textColorHint="@color/colorBlackText"
        app:layout_constraintEnd_toEndOf="@+id/unesiemail"
        app:layout_constraintStart_toStartOf="@+id/unesiemail"
        app:layout_constraintTop_toBottomOf="@+id/unesiemail" />

    <Button
        android:id="@+id/btnprijavise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="Prijavi se"
        app:layout_constraintEnd_toEndOf="@+id/unesiprezime"
        app:layout_constraintStart_toStartOf="@+id/unesiprezime"
        app:layout_constraintTop_toBottomOf="@+id/unesiprezime" />

    <Button
        android:id="@+id/btn_registriraj_se"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Registriraj se "
        app:layout_constraintEnd_toEndOf="@+id/btnprijavise"
        app:layout_constraintStart_toStartOf="@+id/btnprijavise"
        app:layout_constraintTop_toBottomOf="@+id/btnprijavise" />

</androidx.constraintlayout.widget.ConstraintLayout>